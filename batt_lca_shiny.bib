file = {:E$\backslash$:/My Documents/Lit/Spanos, Turney, Fthenakis/Spanos, Turney, Fthenakis - 2015 - Life-cycle analysis of flow-assisted nickel zinc-, manganese dioxide-, and valve-regulated lead-acid.pdf:pdf},
issn = {13640321},
