isbn = {0378-7753},
issn = {03787753},
journal = {Journal of Power Sources},
keywords = {Ageing,Lead-acid battery,Lifetime model,Photovoltaic,Wind},
number = {1 SPEC. ISS.},
pages = {66--78},
title = {{Model prediction for ranking lead-acid batteries according to expected lifetime in renewable energy systems and autonomous power-supply systems}},
volume = {168},
