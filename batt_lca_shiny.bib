doi = {10.1016/j.resconrec.2012.01.002},
file = {:E$\backslash$:/My Documents/Lit/Matsuno, Hur, Fthenakis/Matsuno, Hur, Fthenakis - 2012 - Dynamic modeling of cadmium substance flow with zinc and steel demand in Japan.pdf:pdf},
isbn = {0921-3449},
issn = {09213449},
journal = {Resources, Conservation and Recycling},
pages = {83--90},
publisher = {Elsevier B.V.},
title = {{Dynamic modeling of cadmium substance flow with zinc and steel demand in Japan}},
url = {http://www.sciencedirect.com/science/article/pii/S0921344912000031},
volume = {61},
