doi = {10.1016/j.enpol.2016.05.049},
file = {:E$\backslash$:/My Documents/Lit/Krieger, Casey, Shonkoff/Krieger, Casey, Shonkoff - 2016 - A framework for siting and dispatch of emerging energy resources to realize environmental and health b.pdf:pdf},
issn = {03014215},
journal = {Energy Policy},
keywords = {Air pollution,Demand response,Energy storage,Environmental metrics,Health metrics,Peaker power plants},
